{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 1300,
    "height": 800,
    "title": "Total Goals by Country in FIFA (1830 to 2018)",
    "projection": {
        "type": "equalEarth"
    },
    "layer": [
        {
            "data": {
                "url": "https://raw.githubusercontent.com/dteh0003/3179/main/js/ne_110m.json",
                "format": {
                    "type": "topojson",
                    "feature": "ne_110m_admin_0_countries"
                }
            },
            "mark": {
                "type": "geoshape",
                "fill": "lightgray",
                "stroke": "white"
            }
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/dteh0003/3179/main/fifa.csv"
            },
            "mark": {
                "type": "circle"
            },
            "encoding": {
                "longitude": {
                    "field": "Longitude",
                    "type": "quantitative"
                },
                "latitude": {
                    "field": "Latitude",
                    "type": "quantitative"
                },
                "size": {
                    "field": "Total Goals",
                    "type": "quantitative",
                    "title": "Number of Goals",
                    "scale": {
                        "domain": [
                            1,
                            50,
                            100,
                            150,
                            200,
                            250,
                            300
                        ]
                    }
                },
                "tooltip": [
                    {
                        "field": "Country",
                        "type": "nominal",
                        "title": "Country: "
                    },
                    {
                        "field": "Total Goals",
                        "type": "quantitative",
                        "title": "Total Goals: "
                    }
                ]
            }
        },
        {
            "mark": {
                "type": "text",
                "align": "right",
                "baseline": "middle",
                "dx": -12,
                "fontSize": 11.5,
                "fontStyle": "italic"
            },
            "encoding": {
                "text": {
                    "field": "Country",
                    "type": "nominal"
                },
                "color": {
                    "value": "black"
                },
                "opacity": {
                    "condition": {
                        "test": "datum['Country'] == 'Brazil' || datum['Country'] == 'Germany'",
                        "value": 1
                    },
                    "value": 0
                },
            "tooltip": [
                {
                    "field": "Country",
                    "type": "nominal"
                },
                {
                    "field": "Total Goals",
                    "type": "quantitative"
                }
            ]
            }
        }
    ]
}